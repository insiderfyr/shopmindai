LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.7

# Kong
KONG_ADMIN_TOKEN=change-me
