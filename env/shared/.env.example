# Shared values used across services and the frontend

# Gateway URLs
VITE_API_BASE_URL=http://localhost:8088
VITE_GATEWAY_URL=http://localhost:8088
VITE_AUTH_SERVICE_URL=http://localhost:8088
VITE_AUTH_SERVICE_BASE_URL=http://localhost:8088/api/v1

# Keycloak defaults
KEYCLOAK_URL=http://localhost:8081/auth
KEYCLOAK_REALM=ShopMindAI
KEYCLOAK_CLIENT_ID=shopmind-client
KEYCLOAK_ISSUER_URL=http://localhost:8081/auth/realms/ShopMindAI
KEYCLOAK_JWKS_URL=http://localhost:8081/auth/realms/ShopMindAI/protocol/openid-connect/certs

# LLM proxy defaults
